{
  "mcpServers": {
    "smartsheet-mcp-server": {
      "command": "npx",
      "args": [
        "-y",
        "@smartsheet/smar-mcp"
      ],
      "env": {
        "SMARTSHEET_API_KEY": "{{SMARTSHEET_API_KEY}}",
        "SMARTSHEET_ENDPOINT": "{{SMARTSHEET_ENDPOINT}}",
        "ALLOW_DELETE_TOOLS": "{{ALLOW_DELETE_TOOLS}}"
      }
    }
  }
}
